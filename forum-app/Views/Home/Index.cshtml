@model forum_app.ViewModels.Home.HomeIndexViewModel

<div class="container body-content">
    <div class="row frontPageSplash">
        <div class="col-md-6 frontPageLearn">
            <div class="frontPageHeading">Learn, Collaborate, Share knowledge</div>
            <p class="frontPageSubHeading">Forums is the world's fastest growing coding platform</p>
            <div>
                <form asp-controller="Search" asp-action="Search" method="post">
                    <input asp-for="SearchQuery" type="text" placeholder="Search..." class="homeSearch" />
                </form>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
    <div class="row frontPageCntent">
        <h3 id="latestPosts">Latest Posts</h3>
        <table id="latestPostTable" class="table table-hover">
            <tbody>
                @foreach (var post in Model.LatestPosts)
                {
                    <tr>
                        <td>
                            <div class="forumLogo" style="background-image: url(@post.Forum.ImageUrl); background-size=100%"></div>
                            <div class="postTitle">
                                <a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Id"></a>
                            </div>
                            <div class="postSubTitle">
                                @if(post.RepliesCount == 1)
                                {
                                    <span>@post.RepliesCount Reply</span>
                                }
                                @if (post.RepliesCount == 0)
                                {
                                    <span>No replies</span>
                                } else
                                {
                                    <span>@post.RepliesCount Replies</span>
                                }
                                <span class="postUser">
                                    <a asp-controller="Profile" asp-action="Detail" asp-route-id="@post.Author"></a>
                                </span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
